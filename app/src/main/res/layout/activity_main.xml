<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find a Verse"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surah_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter Surah Number:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ayah_number"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view" />

    <EditText
        android:id="@+id/surah_number_input"
        android:layout_width="106dp"
        android:layout_height="29dp"
        android:ems="5"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toEndOf="@id/surah_number"
        app:layout_constraintTop_toTopOf="@id/surah_number" />

    <TextView
        android:id="@+id/ayah_number_label"
        app:layout_constraintEnd_toStartOf="@id/ayah_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surah_number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Ayah Number:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="177dp" />


   <EditText
       android:id="@+id/ayah_number_input"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/ayah_number_label"
    app:layout_constraintTop_toTopOf="@id/ayah_number_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="5"
    android:inputType="number"
    tools:layout_editor_absoluteX="170dp"
    tools:layout_editor_absoluteY="89dp" />


</androidx.constraintlayout.widget.ConstraintLayout>